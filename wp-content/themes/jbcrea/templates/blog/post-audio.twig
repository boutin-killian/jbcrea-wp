<article class="post-detail post-type-{{ post.post_type }}" id="post-{{ post.ID }}">
    <header class="entry-header">
        <div class="entry-meta">
            <span>Par</span> {{ post.author.name }} <span> / </span> {{ post.date }} / {{ post.category }}
        </div>

        <div class="default-img-posts">
            <audio controls="controls">
                <source src="{{ post.get_field('sound_file') }}" type="audio/wav">
                Votre navigateur ne prend pas en charge l'élément <code>audio</code>.
            </audio>
        </div>

        <h1 class="article-h1">{{ post.title }}</h1>
    </header>
    <div>
        {{ post.content }}
    </div>
</article>