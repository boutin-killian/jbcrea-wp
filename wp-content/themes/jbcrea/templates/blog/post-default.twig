<article class="post-detail post-type-{{ post.post_type }}" id="post-{{ post.ID }}">
    <header class="entry-header">
        <div class="entry-meta">
            <span>Par</span> {{ post.author.name }} <span> / </span> {{ post.date }} / {{ post.category }}
        </div>

        {% if post.thumbnail %}
            <div class="content-img">
                <div class="default-img-posts" style="background-image: url('{{ TimberImage(post.thumbnail.src).src }}');">
                </div>
            </div>
        {% endif %}

        <h1 class="article-h1">{{ post.title }}</h1>

    </header>
    <div class="entry-summary">
        {{ post.content }}
    </div>
    <footer class="entry-footer">

    </footer>
</article>