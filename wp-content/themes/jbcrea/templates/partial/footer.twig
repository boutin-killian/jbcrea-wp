</div>

{# Footer Menu if enabled #}
{% if options.footer_menu_enabled %}
    <div class="grid-container">

        <ul id="footer-menu" class="menu align-center">
            {% for item in footer_menu.items %}
                {% include "partial/menu-item.twig" with {'item': item} %}
            {% endfor %}
        </ul>

    </div>
{% endif %}

