{#
Title: Texte et Image
Description: Permet d'insérer un texte et une image côte à côte.
Category: Contenu du flexible
Icon: analytics
Keywords: gosselink texte image
#}

{% set textPicture = function('get_field', 'text_picture') %}
<div class="grid-container">
    {% for item in textPicture %}
        {% if item.order == 1 %}
            <div class="grid-x grid-padding-x paragraph-block">
                <div class="cell text {% if item.wish %}small-12 large-6 {% else %} large-12 {% endif %}left {{ item.color }}">
                    <div class="paragraph">
                        {{ item.paragraph }}

                        {% if item.add_button %}
                            <a href="{{ item.button['url'] }}"
                               target="{{ item.button['target'] }}"
                               class="button">{{ item.button['title'] }}</a>
                        {% endif %}
                    </div>
                </div>

                {% if item.wish and item.image_type == 'image' %}
                    <div class="cell small-12 large-6 right img-block">
                        <div class="img-content">
                            <img src="{{ TimberImage(item.image) }}" alt="{{ item.image.alt }}">
                        </div>
                        <div class="content-before"></div>
                    </div>
                {% elseif item.wish and item.image_type == 'slider' %}
                    <div class="small-12 large-6 right img-block">
                        <div class="img-content">
                            <div class="slideshowblock swiper-container">
                                <div class="swiper-wrapper">
                                    {% for slide in item.slider %}
                                        <div class="swiper-slide">
                                            <div class="slide-inner">
                                                <img src="{{ TimberImage(slide.slider_image).src }}"
                                                     alt="{{ slide.slider_image.alt }}">
                                            </div>
                                        </div>
                                    {% endfor %}
                                </div>

                                <div class="swiper-pagination swiper-pagination-white"></div>

                                <div class="swiper-button-prev swiper-button-white"></div>
                                <div class="swiper-button-next swiper-button-white"></div>
                            </div>
                        </div>
                        <div class="content-before"></div>
                    </div>
                {% endif %}
            </div>

        {% else %}

            <div class="grid-x grid-padding-x paragraph-block">
                {% if item.wish and item.image_type == 'image' %}
                    <div class="cell small-12 large-6 left img-block">
                        <div class="img-content">
                            <img src="{{ TimberImage(item.image) }}" alt="{{ item.image.alt }}">
                        </div>
                        <div class="content-before"></div>
                    </div>
                {% elseif item.wish and item.image_type == 'slider' %}
                    <div class="small-12 large-6 left img-block">
                        <div class="img-content">
                            <div class="slideshowblock swiper-container">
                                <div class="swiper-wrapper">
                                    {% for slide in item.slider %}
                                        <div class="swiper-slide">
                                            <div class="slide-inner">
                                                <img src="{{ TimberImage(slide.slider_image).src }}"
                                                     alt="{{ slide.slider_image.alt }}">
                                            </div>
                                        </div>
                                    {% endfor %}
                                </div>
                                <div class="swiper-pagination swiper-pagination-white"></div>

                                <div class="swiper-button-prev swiper-button-white"></div>
                                <div class="swiper-button-next swiper-button-white"></div>
                            </div>
                        </div>
                        <div class="content-before"></div>
                    </div>
                {% endif %}

                <div class="cell text {% if item.wish %}small-12 large-6 {% else %} large-12 {% endif %}right {{ item.color }}">
                    <div class="paragraph">
                        {{ item.paragraph }}

                        {% if item.add_button %}

                            <a href="{{ item.button['url'] }}"
                               target="{{ item.button['target'] }}"
                               class="button">{{ item.button['title'] }}</a>
                        {% endif %}
                    </div>
                </div>
            </div>
        {% endif %}
    {% endfor %}
</div>
