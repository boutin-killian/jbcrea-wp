{#
Title: Bloc de téléchargement
Description: Permet d'insérer un ou plusieurs blocs de téléchargement.
Category: Contenu du flexible
Icon: download
Keywords: gosselink download telechargement téléchargement
#}

{% set flexi_block_download_title = function('get_field', 'block_download_title') %}
{% set flexi_description_download_block = function('get_field', 'description_download_block') %}
{% set flexi_download = function('get_field', 'download') %}

{% set flexi_order = function('get_field', 'order') %}
{% set flexi_wish = function('get_field', 'wish') %}
{% set flexi_image = function('get_field', 'image') %}
{% set flexi_img_format = function('get_field', 'img_format') %}
{% set flexi_color = function('get_field', 'color') %}

<div class="tools-downloads-block {{ flexi_color }}">
    <div class="grid-container">
        <div class="grid-x grid-padding-x" data-equalizer data-equalize-on="medium">
            {% if flexi_order == NULL or flexi_order == 1 %}

                <div class="cell {% if flexi_wish %} small-12 large-6 {% else %} large-12 {% endif %}left">
                    <div class="paragraph">
                        {% if flexi_block_download_title %}
                            <h2>{{ flexi_block_download_title }}</h2>
                        {% endif %}
                        {% if flexi_description_download_block %}
                            <div>
                                {{ flexi_description_download_block }}
                            </div>
                        {% endif %}
                    </div>
                </div>

                {% if flexi_wish %}
                    <div class="cell small-12 large-6 right img-block">
                        <div class="img-content">
                            <div class="{% if flexi_img_format %}cover{% else %}contain{% endif %}">
                                <img src="{{ TimberImage(flexi_image) }}" alt="{{ flexi_image.alt }}">
                            </div>
                        </div>
                    </div>
                {% endif %}

            {% else %}

                {% if flexi_wish %}
                    <div class="cell small-12 large-6 left img-block">
                        <div class="img-content">
                            <div class="{% if flexi_img_format %}cover{% else %}contain{% endif %}">
                                <img src="{{ TimberImage(flexi_image) }}" alt="{{ flexi_image.alt }}">
                            </div>
                        </div>
                    </div>
                {% endif %}

                <div class="cell {% if flexi_wish %} small-12 large-6 {% else %} large-12 {% endif %}right">
                    <div class="paragraph">
                        {% if flexi_block_download_title %}
                            <h2>{{ flexi_block_download_title }}</h2>
                        {% endif %}
                        {% if flexi_description_download_block %}
                            <div>
                                {{ flexi_description_download_block }}
                            </div>
                        {% endif %}
                    </div>
                </div>

            {% endif %}

            {% for item in flexi_download %}
                <div class="cell small-12 medium-6 large-3 centered-blocks">
                    <div class="download-block" data-equalizer-watch>
                        <h4>{{ item.doc_title }}</h4>
                        {% if item.doc_description %}
                            <div class="description">
                                {{ item.doc_description }}
                            </div>
                        {% endif %}

                        <a href="{{ item.doc_link }}" target="_blank" class="button">
                            Télécharger
                        </a>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
</div>
